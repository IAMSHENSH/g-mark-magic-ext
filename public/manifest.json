{
  "manifest_version": 3,
  "name": "MarkMagic",
  "description": "Your browser's enchanting solution for effortless, intelligent bookmark management.",
  "version": "0.1.7",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "action": {
    "default_icon": "icon_48.png",
    "default_title": "Click to open panel"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "bookmarks"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
